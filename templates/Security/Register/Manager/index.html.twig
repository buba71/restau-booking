{% extends 'base.html.twig' %}

{% block body %}
    <div class="register-form mt-5">

        <fieldset>

            {{ form_start(form) }}
                <div class="card">

                    <div class="card-header text-white bg-info">
                        <h5 class="text-center">Cr√©er un compte professionel</h5>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">Informations sur votre restaurant</h5>

                        {{ form_row(form.restaurant.name) }}
                        {{ form_row(form.restaurant.address) }}

                        <div class="row">
                            <div class="col">
                                {{ form_row(form.restaurant.zipcode) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.restaurant.city) }}
                            </div>
                        </div>


                        {{ form_row(form.restaurant.phone) }}
                        {{ form_row(form.restaurant.speciality) }}
                        {{ form_row(form.restaurant.imageFile) }}
                    </div>
                </div>
                <div class="card mt-2">
                    <div class="card-body">
                        <h5 class="card-title">Informations personnelles</h5>

                        <div class="row">
                            <div class="col">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.lastName) }}
                            </div>
                        </div>              
                        
                        {{ form_row(form.phone) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}
                        {{ form_row(form.submit) }}
                    </div>        
                </div>
            {{ form_end(form) }}
        
        </fieldset>
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Customize Image Form input (Set the file name on input).
        $('.custom-file-input').on('change', function(event) {
            var inputFile = event.currentTarget;
            $(inputFile).parent()
                .find('.custom-file-label')
                .html(inputFile.files[0].name);
        });
    </script>
{% endblock %} 