{% extends 'BackOffice/ManagerAccount/layout.html.twig' %}

{% block body %}
    <div class="text-muted">
        <h1>Mon Profil</h1>
    </div>


    <section class="card user-profile mt-5 p-3" id="manager-profile">
    
        <h3 class="card-title py-3 text-muted">Mes Informations</h3>
        <div class="car-body">
            <table>
                <tr>
                    <th scope="row">Prénom:</th>
                    <td class="px-3">{{ app.user.firstName }}</td>         
                </tr>
                <tr>
                    <th scope="row">Nom:</th>
                    <td class="px-3">{{ app.user.lastName }}</td>         
                </tr>
                <tr>
                    <th scope="row">Numéro de téléphone:</th>
                    <td class="px-3">{{ app.user.phone }}</td>         
                </tr>
                <tr>
                    <th scope="row">Email:</th>
                    <td class="px-3">{{ app.user.Email }}</td>         
                </tr>
                
            </table>
        </div>

        <div class="mt-5">
            <a href="{{ path ('manager_edit', {'id': app.user.id}) }}" type="button" class="btn btn-secondary">Modifier</a>
            <a href="{{ path ('manager_delete', {'id': app.user.id}) }}" type="button" class="btn btn-danger ml-3">Supprimer le compte</a>
        </div>
        
    </section>
{% endblock %}