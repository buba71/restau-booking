{% extends 'BackOffice/ManagerAccount/layout.html.twig'%}

{% block body %}

    <div class="text-muted">
        <h1>Commandes</h1>
    </div>

    <section class="card mt-5 p-3" id="order_list">

    {% set status = ['En attente']%}
        

        {% if bookings | length > 0 %}

            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Command√© par</th>
                        <th>Type</th>
                        <th>Total</th>                            
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                    
                <tbody>
                    {% for booking in bookings %}                            
                        
                        <tr>
                            <td>{{ booking.bookingDate | date('d M Y') }}</td>
                            <td></td>
                            <td>{% if booking.bookingOrder.type == "onSpot" %}Sur place{% else %}A emporter{% endif %}</td>
                            <td>{{ booking.bookingOrder.amount | format_currency('EUR') }}</td>
                            <td>{{ status[booking.bookingOrder.status] }}</td>                            
                            <td>
                                <i class="fa fa-eye mr-2"></i>
                                <i class="fa fa-check mr-2"></i>
                                <i class="fa fa-trash"></i>
                            </td>
                        </tr>
                        
                    {% endfor %}
                </tbody>
            </table>

        {% else %}

            <div class="alert alert-info mb-0">
                <p>Aucune commande en cours.</p>
            </div>

        {% endif %}
                
    </section>
    

{% endblock %}