{% extends 'BackOffice/ManagerAccount/layout.html.twig' %}

{% block body %}
    <div>
        <h1 class="text-muted">Détails du menu</h1>
    </div>
    <section class="card mt-5 p-3" id="menu-details">
        <ul class="p-0">
            <li>Date de création: {{ menu.createdAt | date('d M Y') }}</li>
            <li>Nom: {{ menu.name }}</li>
            <li>Description: {{ menu.description }}</li>
            <li>Composition:
                <ul> 
                {% for menuItem in menu.menuItems %}
                
                    <li>{{ menuItem }}</li>                
                
                {% endfor %}
                </ul>
            </li>
            <li>Prix: {{ menu.price | format_currency('EUR') }}</li>
        </ul>
        <div class="form-controls">
            <a href="{{ path('show_menus') }}" type="button" class="btn btn-secondary">Retour</a>
        </div>
    </section>
{% endblock %}