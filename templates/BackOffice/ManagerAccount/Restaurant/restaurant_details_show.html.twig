{% extends 'BackOffice/ManagerAccount/layout.html.twig' %}

{% block body %}
    <div class="text-muted">
        <h1>Mon Restaurant</h1>
    </div>


    <section class="card user-profile mt-5 p-3" id="manager-profile">

        
        
        <h3 class="card-title pt-5 pb-2 text-muted">Détails du restaurant</h3>

        {% if restaurant.imagefilePath is not null %}
            <div class="restaurant-background w-25 mb-5">
                <img src="{{ asset(restaurant.imageFilePath) }}" alt="" class="img-thumbnail img-fluid">
            </div>
        {% endif %}
        
        <div class="car-body">
            <table>
                <tr>
                    <th scope="row">Nom:</th>
                    <td class="px-3">{{ restaurant.name }}</td>         
                </tr>
                <tr>
                    <th scope="row">Adresse:</th>
                    <td class="px-3">
                        <address>
                            <ul class="nav flex-column">
                                <li class="nav-item">{{ restaurant.address }}</li>
                                <li class="nav-item">{{ restaurant.zipcode}} {{ restaurant.city }}</li>
                            </ul>                        
                        </address>
                        
                    </td>         
                </tr>
                <tr>
                    <th scope="row">Numéro de téléphone:</th>
                    <td class="px-3">{{ restaurant.phone }}</td>         
                </tr>
                <tr>
                    <th scope="row">Spécialité:</th>
                    <td class="px-3">{{ restaurant.speciality }}</td>         
                </tr>
                <tr><td class="p-3"></td></tr>
                <tr>
                    <th scope="row">Réservations en ligne:</th>
                    <td class="px-3">
                        {% if restaurant.bookingEnabled %}
                            <big><span class="badge badge-info">Activées</span></big>
                        {% else %}
                            <big><span class="badge badge-info">Désactivées</span></big>
                        {% endif %}
                    </td>         
                </tr>
                <tr>
                    <th scope="row">Commandes en ligne:</th>
                    <td class="px-3">
                        {% if restaurant.orderEnabled %}
                            <big><span class="badge badge-info">Activées</span></big>
                        {% else %}
                            <big><span class="badge badge-info">Désactivées</span></big>
                        {% endif %}
                    </td>         
                </tr>
            </table>
        </div>

        <div class="mt-5">
            <a href="{{ path ('restaurant_edit')}}" type="button" class="btn btn-secondary">Modifier</a>
        </div>
        
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}